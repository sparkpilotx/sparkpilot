{
  "name": "sparkpilot",
  "productName": "sparkpilot",
  "version": "1.0.0",
  "description": "system tray triggered multi-window native-UX desktop application.",
  "main": "./out/main/index.js",
  "type": "module",
  "scripts": {
    "predev": "node ./scripts/gen-tray-assets.mjs",
    "dev": "electron-vite dev",
    "prebuild": "node ./scripts/gen-tray-assets.mjs",
    "build": "electron-vite build",
    "db:generate": "dotenv -e .env.local -- prisma generate --schema=./prisma/schema.prisma",
    "db:migrate": "dotenv -e .env.local -- prisma migrate dev --name init --schema=./prisma/schema.prisma",
    "db:studio": "dotenv -e .env.local -- prisma studio --schema=./prisma/schema.prisma",
    "db:reset": "dotenv -e .env.local -- prisma migrate reset --force --schema=./prisma/schema.prisma",
    "build:mac": "npm run build && ELECTRON_MIRROR=https://github.com/electron/electron/releases/download/ HTTP_PROXY=http://127.0.0.1:2022 HTTPS_PROXY=http://127.0.0.1:2022 CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac --publish never",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "postinstall": "electron-builder install-app-deps && dotenv -e .env.local -- prisma generate --schema=./prisma/schema.prisma || true"
  },
  "keywords": [],
  "author": "simonxing",
  "license": "UNLICENSED",
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@tailwindcss/vite": "^4.1.11",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitejs/plugin-react": "^5.0.0",
    "dotenv-cli": "^10.0.0",
    "electron": "^37.3.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^4.0.0",
    "eslint": "^9.33.0",
    "prettier": "^3.6.2",
    "prisma": "^6.14.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sharp": "^0.34.3",
    "tailwindcss": "^4.1.12",
    "typescript": "5.8.3",
    "vite": "^7.1.2"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@prisma/client": "^6.14.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@radix-ui/react-visually-hidden": "^1.2.3",
    "@trpc/client": "^11.4.4",
    "@trpc/server": "^11.4.4",
    "@trpc/tanstack-react-query": "^11.4.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "immer": "^10.1.1",
    "lucide-react": "^0.540.0",
    "superjson": "^2.2.2",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.6",
    "zod": "3.25.67",
    "zustand": "^5.0.7"
  }
}
